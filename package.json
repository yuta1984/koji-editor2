{
  "name": "koji-editor",
  "version": "0.0.1",
  "description": "A web-based text editor for Koji, a lightweight markup language for historical Japanese texts",
  "main": "index.js",
  "engines": {
    "node": "11.14.0"
  },
  "scripts": {
    "start": "webpack-dev-server --port 9000 --inline --progress --profile --colors --watch --content-base dist/ --mode development",
    "build": "webpack --config webpack.config.js --mode production",
    "build.prod": "webpack --config webpack.config.js -p --display-modules",
    "test": "mocha -r ts-node/register test/*.spec.ts"
  },
  "author": "Yuta Hashimoto",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.2.7",
    "@types/mocha": "^5.2.7",
    "@types/node": "^13.1.2",
    "awesome-typescript-loader": "^5.2.1",
    "chai": "^4.2.0",
    "css-loader": "^3.4.0",
    "mocha": "^7.0.0",
    "node-sass": "^4.13.0",
    "sass-loader": "^8.0.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^1.1.2",
    "ts-node": "^8.6.2",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1",
    "typescript": "^3.7.4",
    "global": "^4.4.0"
  },
  "dependencies": {}
}
